@model IEnumerable<Kurumsal.Models.Sınıflar.Mesaj>
@{ ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<section class="page-top-section set-bg" data-setbg="/Content/img/page-top-bg.jpg">
    <div class="container">
        <h2>İletişim</h2>
    </div>
</section>
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-form-warp">
                    <h4>Bize ulaşın!</h4>
                    @if (TempData["Başarısız"] != null)
                    {
                        <div class="alert alert-danger text-center" style="">
                            @TempData["Başarısız"]
                        </div>
                    }
                    @if (TempData["Basarılı"] != null)
                    {
                        <div class="alert alert-success text-center" style="">
                            @TempData["Basarılı"]
                        </div>
                    }
                    <form class="contact-form" action="/Home/Mesaj/" method="post" role="form">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" name="AdSoyad" id="AdSoyad" placeholder="Ad soyad" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="Telefon" id="Telefon" placeholder="Telefon numarası" required>
                            </div>
                            <div class="col-md-12">
                                <input type="text" name="Konu" id="Konu" placeholder="Konu" required>
                                <textarea name="İleti" placeholder="Mesaj" required></textarea>
                                <button type="submit" class="site-btn">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info">

                    @{
                        Html.RenderAction("Iletisim", "Home");
                    }

                    <div class="contact-social">
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                        <a href="#"><i class="fa fa-behance"></i></a>
                        <a href="#"><i class="fa fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="location-map" id="map-canvas">
            <iframe src="https://www.google.com/maps/embed?pb=!1m16!1m12!1m3!1d24082.114315380997!2d28.91473135!3d41.0194735!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!2m1!1sMET%C4%B0N%20TOKA!5e0!3m2!1str!2str!4v1595747302001!5m2!1str!2str" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>
</section>