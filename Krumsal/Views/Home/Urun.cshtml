@model IPagedList<Kurumsal.Models.Hizmet>
@using PagedList;
@using PagedList.Mvc;

@{ ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<!-- Hero section -->
<section class="page-top-section set-bg" data-setbg="/Content/img/page-top-bg.jpg">
    <div class="container">
        <h2>Ürünler</h2>
    </div>
</section>
<!-- Hero section end -->
<!-- Search section -->
<div class="search-form-section">
    <div class="sf-warp">
        <div class="container">
            <form class="big-search-form">
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <select>
                            <option>Kategori Seçiniz</option>
                            @*@{
                                    Html.RenderAction("KategoriListesi", "Home");
                                }*@
                        </select>
                    </div>

                    <div class="col-lg-6 col-sm-6">
                        <div class="row">
                            <div class="col-lg-8 col-sm-8">
                                <input type="text" placeholder="Ürün Ara">
                            </div>
                            <div class="col-lg-4 col-sm-4">
                                <button class="bsf-btn">Ara</button>

                            </div>
                        </div>

                    </div>

                </div>


                @*<select>
                        <option>All Ingredients</option>
                        <option>Breakfast</option>
                        <option>Lunch</option>
                        <option>Dinner</option>
                    </select>*@

            </form>
        </div>
    </div>
</div>
<!-- Search section end -->
<!-- Recipes section -->
<section class="recipes-page spad">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="section-title">
                    <h2>Tüm Ürünlerimiz</h2>
                </div>
            </div>

        </div>
        <div class="row">

            @foreach (var item in Model)
            {
<div class="col-lg-4 col-md-6">
    <div class="recipe">
        <a href="#"><img src="@item.ResimURL" alt=""></a>
        <div class="recipe-info-warp">
            <div class="recipe-info">
                <a href="#"><h3>@item.Baslik</h3></a>
                <div class="rating mt-2">
                    <h4 class="badge" style="display: inline;background-color: white;color:black">@item.UrunKodu</h4>
                </div>
            </div>
        </div>
    </div>
</div>      }

        </div>
        <div class="site-pagination">
            <span>01</span>
            <a href="#">02</a>
            <a href="#">03</a>
        </div>
    </div>
</section>
<!-- Recipes section end -->
<!-- Gallery section -->
<div class="gallery">
    <div class="gallery-slider owl-carousel">
        <div class="gs-item set-bg" data-setbg="img/instagram/1.jpg"></div>
        <div class="gs-item set-bg" data-setbg="img/instagram/2.jpg"></div>
        <div class="gs-item set-bg" data-setbg="img/instagram/3.jpg"></div>
        <div class="gs-item set-bg" data-setbg="img/instagram/4.jpg"></div>
        <div class="gs-item set-bg" data-setbg="img/instagram/5.jpg"></div>
        <div class="gs-item set-bg" data-setbg="img/instagram/6.jpg"></div>
    </div>
</div>
<!-- Gallery section end -->
