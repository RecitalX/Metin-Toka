@model IEnumerable<Kurumsal.Models.Sınıflar.Banner>
@{
    Layout = null;
}
@foreach (var item in Model.OrderByDescending(x=> x.ID).Where(x=> x.Onay == true))
{
    <div class="add-warp">
        <div class="add-slider owl-carousel">
            <a href="@item.Url">
                <img src="@item.ResimURL" alt="Banner-Photo" />
            </a>
            @*<div class="as-item set-bg" data-setbg="@item.ResimURL"></div>*@
        </div>
        <div class="row add-text-warp">
            <div class="col-lg-4 col-md-5 offset-lg-8 offset-md-7">
                <div class="add-text text-white">
                    <div class="at-style"></div>
                    <h2>@Html.Raw(item.Baslik)</h2>
                    <ul>
                        <li>@Html.Raw(item.Aciklama)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
