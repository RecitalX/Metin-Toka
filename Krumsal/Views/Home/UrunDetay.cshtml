@model Kurumsal.Models.Hizmet
@{
    ViewBag.Title = "HizmetDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="page-top-section set-bg" data-setbg="/Content/img/page-top-bg.jpg">
        <div class="container">
            <h2>@Model.Baslik</h2>
        </div>
    </section>

    <div class="product_details py-5">
        <div class="container">
            <div class="row details_row">

                <!-- Product Image -->
                <div class="col-lg-6">
                    <div class="details_image">
                        <div class="details_image_large">
                            <img src="@Model.ResimURL" alt="">
                        </div>

                    </div>
                </div>

                <!-- Product Content -->
                <div class="col-lg-6">

                    <div class="details_text">
                        <h2>@Model.Baslik</h2>
                        <div class="details_share">

                            <div class="mt-4 h4">
                                <h3 class="badge" style="background-color: #0d408b;color:white">@Model.UrunKodu</h3>
                                <h3 class="badge" style="background-color: #0d408b;color:white">@Model.HizmetKategori.HizmetKategoriAdi</h3>
                            </div>
                        </div>
                        <p>
                            @Html.Raw(Model.Icerik)
                        </p>
                    </div>

                    <!-- Share -->
                    
                </div>
            </div>
        </div>
    </div>